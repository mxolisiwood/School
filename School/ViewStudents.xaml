<Window x:Class="School.ViewStudents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:School"
        mc:Ignorable="d"
        Title="ViewStudents" Height="470" Width="700" Loaded="Window_Loaded">
    <Grid Background="Aqua">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid HorizontalAlignment="Left" Background="DarkOrange" Height="331" Name="StudentGrid" Margin="60,29,0,0" VerticalAlignment="Top" Width="568" SelectionChanged="StudentGrid_SelectionChanged">
           
        </DataGrid>
        <Button Content="View Current Classes" HorizontalAlignment="Left" Margin="60,385,0,0" VerticalAlignment="Top" Width="171" Background="Red" FontWeight="Bold" Foreground="White" Height="46"/>
        <Button Content="View Completed Classes" HorizontalAlignment="Left" Margin="450,385,0,0" VerticalAlignment="Top" Width="147" Background="YellowGreen" FontWeight="Bold" Height="46"/>

    </Grid>
</Window>
