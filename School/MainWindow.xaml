<Window x:Class="School.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:School"
        mc:Ignorable="d"
        Title="Main Window" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="253*"/>
            <ColumnDefinition Width="541*"/>
        </Grid.ColumnDefinitions>
        <Menu HorizontalAlignment="Left" Name="Menu" Height="36" Background="DarkCyan" VerticalAlignment="Top" Width="794" RenderTransformOrigin="0.494,-0.222" Grid.ColumnSpan="2">
            <MenuItem Header="_Menu">
                <MenuItem Header="Add Student" Click="MenuItem_Click_2"/>
                <MenuItem Header="Add Class" Click="MenuItem_Click_3"/>
                <MenuItem Header="_Exit" Click="MenuItem_Click_1"/>
            </MenuItem>

            <MenuItem Header="_Edit">
                <MenuItem Header="Edit Student" Click="MenuItem_Click_5"/>
                <MenuItem Header="Edit Class"/>
            </MenuItem>

            <MenuItem Header="_View">
                <MenuItem Header="Student" Click="MenuItem_Click"/>
                <MenuItem Header="Classes" Click="MenuItem_Click_4"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
